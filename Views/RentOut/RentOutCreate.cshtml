@model AspCoreSolution.Models.RentOutBoat
@{
    ViewData["Title"] = "Create";
}
    <h2>Sell Boat</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="RentOutCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BoatName" class="control-label"></label>
                <input asp-for="BoatName" class="form-control" />
                <span asp-validation-for="BoatName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerName" class="control-label"></label>
                <input asp-for="CustomerName" class="form-control" />
                <span asp-validation-for="CustomerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
  
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script type="text/javascript">
$(function () {
    var msg = '@ViewData["result"]';
    debugger;
if (msg == '1')
{
alert("Boat Sold Successfully");
window.location.href = "@Url.Action("Index", "RentOut")";
    }

  else  if (msg == '-1') {
        alert("Sorry This Boat Has Already Sold ");
       window.location.href = "@Url.Action("Index", "RentOut")";
    }

});
</script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 